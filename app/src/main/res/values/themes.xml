<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ModernCleanArchitecture" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.ModernCleanArchitecture.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration -->
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an animated drawable -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_general_logo</item>
        <!-- Icon splash screen background color -->
        <item name="windowSplashScreenIconBackgroundColor">@color/purple_700</item>
        <!-- Anim duration for splash icon -->
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <!-- Set the theme of the Activity that directly follows your splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.ModernCleanArchitecture</item>
    </style>

</resources>